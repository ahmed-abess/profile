{% extends 'base.html.twig' %}
{% block body %}

    <div class="row">
        {% for user in users %}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ user.avatar }} "alt="Card-image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.first_name }} {{ user.last_name }}</h5>
                    </div>

                    <div class="card-body">
                        <a href="{{ path('profile',{ 'id': user.id }) }}" class="card-link"style="color: #ffffff">  <button class="btn btn-primary right ">Profile</button></a>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}